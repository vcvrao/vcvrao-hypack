# Names of set of example programs
OBJECT=Vect-Vect-Addition
#OBJECT=ScalarVectGlobalMemDP
#OBJECT=ScalarVectGlobalMemSP

run:
	$(CC) $(CLLINKFLAGS) $(CLINC) $(CLINKLIB) -o $(OBJECT) $(OBJECT).cpp

